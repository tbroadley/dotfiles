{
  "cleanupPeriodDays": 999999,
  "permissions": {
    "additionalDirectories": ["~/dotfiles"],
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read(/opt/python/**)",
      "Read(/tmp/**)",
      "Read(~/dotfiles/**)",
      "Edit(~/dotfiles/**)",
      "Write(~/dotfiles/**)",
      "NotebookEdit",
      "mcp__linear__list_*",
      "mcp__linear__get_*",
      "mcp__linear__search_documentation",
      "mcp__linear__create_issue",
      "mcp__linear__create_comment",
      "mcp__todoist__find-tasks",
      "mcp__todoist__find-tasks-by-date",
      "mcp__todoist__find-completed-tasks",
      "mcp__todoist__find-projects",
      "mcp__todoist__find-sections",
      "mcp__todoist__find-comments",
      "mcp__todoist__find-activity",
      "mcp__todoist__find-project-collaborators",
      "mcp__todoist__get-overview",
      "mcp__todoist__user-info",
      "mcp__todoist__fetch-object",
      "mcp__todoist__fetch",
      "mcp__todoist__search",
      "mcp__todoist__add-tasks",
      "mcp__todoist__add-comments",
      "WebFetch(domain:github.com/METR)",
      "WebFetch(domain:raw.githubusercontent.com/METR)",
      "WebFetch(domain:inspect.aisi.org.uk)",
      "WebFetch(domain:meridianlabs-ai.github.io)"
    ],
    "deny": [
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(truncate:*)",
      "Bash(sudo:*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/check-devcontainer.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-push-secrets-scan.sh",
            "timeout": 120000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "cat >/dev/null; R=$(git config --get remote.origin.url 2>/dev/null | sed -E 's#^(https?://|git@)?github\\.com[/:]##; s#\\.git$##'); B=$(git rev-parse --abbrev-ref HEAD 2>/dev/null); [ -n \"$R\" ] && echo \"$R $B\" || echo \"(no git remote)\""
  },
  "enabledPlugins": {
    "warehouse-query@metr-eval-execution": true
  }
}
