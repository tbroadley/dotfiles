#!/bin/bash

# Load resources

xrdb -merge .Xresources

# Set up an icon tray
stalonetray &

# Fire up apps

xscreensaver -no-splash &
feh --image-bg black --bg-max "/home/thomas/Pictures/Iwafune Pedestrian Walkway.jpg"
